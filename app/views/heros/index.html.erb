<%=form_with url: "/find_hero", local: true, method: :post do %>
  <%= label_tag :hero %>
  <%= text_field_tag :hero%>
<%end%>
<div class="hero-container">
  <%@heroes.each do |h|%>
    <div class="hero">
      <img src=<%=h["thumbnail"]["path"] + '.jpg'%> alt=<%=h["name"]%> />
      <%obj = {"hero_email": "#{h["id"]}@gmail.com", "id": h["id"], **h}%>
      <h3><%=link_to h["name"], hero_path(obj) %></h3>
    </div>
  <% end %>
</div>
